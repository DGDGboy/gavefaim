<div class="container">
  <div class="row">
    <div class="col-6 offset-3">

      <h2>Cr√©er un nouveau post</h2>
      <br>
      <%= simple_form_for(@restaurant) do |f| %>

        <div class="form-inputs">

          <%= f.input :images, as: :file, input_html: { multiple: true } %>
          <%= f.input :name, label: "Nom du restau", required: true %>
          <%= f.input :description, label: "ton avis" %>
          <%= f.input :address, label: "Adresse du restaurant", required: true %>
          <%= f.input :style, label: "Style du restaurant" , required: true%>
          <%= f.input :rating, label: "ta note", required: true %>
          <div class="form-actions">
            <%= f.button :submit, "publier l'article" %>
            <%= link_to "Retour", restaurants_path  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

