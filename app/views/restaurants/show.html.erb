<!-----------Banner------------>

<div class="bannershow jarallax" data-jarallax data-speed=".8" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @restaurant.images[0].key %>);">
    <div class="row">
      <div class="col-6 offset-3">
        <div class="container">
          <div class="intro">
            <h1><%= @restaurant.name %></h1>
            <p>Par <%= @restaurant.user.name %></p>
            <h2>"<%= @restaurant.title %>"</h2>

          </div>
        </div>
      </div>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <p>"<%= @restaurant.description %>"</p>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.rating %></p>
      <p><%= @restaurant.style %></p>
<!--       <p><%= cl_image_tag @restaurant.images[0].key %></p>
 -->
      <div class="slider">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @restaurant.images.each do |image| %>
              <% if image == @restaurant.images.first %>
                <div class="carousel-item active">
              <% else %>
                <div class="carousel-item">
              <% end %>
                <%= cl_image_tag image.key, class: "d-block w-100" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
<br>
<!-----------commentaires------------>
      <div class="intro">
        <h1>Ce que vous en pensez</h1>
        <p>Si vous avez des commentaires ou des demandes particulières</p>
        <br>
        <%= link_to "poster un commentaire", new_restaurant_review_path(@restaurant)  %>
        <ul class="list-group">
            <% @restaurant.reviews.each do |review| %>
              <li class="list-group-item">
                <ul><h8> <%= @restaurant.user.name %> a écrit le <%= review.created_at.strftime("%d-%m-%Y à %k:%M") %></h8></ul>
                <br>
                <h5><%= review.content %></h5>


                <%= link_to "Supprimer", review_path(review), method: :delete, data: { confirm: "Are you sure?" }  %>
              </li>
            <% end %>
        </ul>
      </div>



      <br>
      <% if current_user.nil? %>
      <% elsif current_user.superadmin_role? || current_user.supervisor_role? %>
        <a class="btn btn-flat"<%= link_to "Modifier", edit_restaurant_path(@restaurant), method: :delete, data: {
          confirm: "C'est ton dernier mot?" } %></a>
      <% end %>

    </div>
  </div>
</div>

